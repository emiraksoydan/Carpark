@using CarPark.Application.Dtos.Parking
@using CarPark.Application.Dtos.Parking.Response
@using CarPark.Application.ResponseData
@model Result<List<ParkingSpotDto>>


@{
    ViewData["Title"] = "Otopark Durumu";
    ViewData["IgnoreKeys"] = new[] { "CardHolderName", "CardNumber", "Expiry", "Cvv" };

    var successMessage = TempData["SuccessMessage"] as string;
}
@{
    // Controller'dan gelen bilgiler
    bool showPaymentModal = ViewBag.ShowPaymentModal == true;
    string exitPlate = ViewBag.ExitPlate as string ?? "";
    decimal? exitPrice = ViewBag.ExitPrice as decimal?;

    // Modalın CSS durumu (açık / kapalı)
    var paymentModalClass = showPaymentModal ? "modal fade show" : "modal fade";
    var paymentModalStyle = showPaymentModal ? "display:block;" : "display:none;";
    var paymentModalAriaHidden = showPaymentModal ? "false" : "true";

    // Formdan gelen değerler (validation fail olduğunda tekrar göstermek için)
    var form = Context.Request?.HasFormContentType == true
        ? Context.Request.Form
        : null;

    var formCardHolderName = form?["CardHolderName"].ToString();
    var formCardNumber = form?["CardNumber"].ToString();
    var formExpiry = form?["Expiry"].ToString();
    var formCvv = form?["Cvv"].ToString();

    // ModelState alan bazlı hatalar
    var nameErrors = ViewData.ModelState["CardHolderName"]?.Errors;
    var nameInvalid = nameErrors != null && nameErrors.Count > 0;

    var cardErrors = ViewData.ModelState["CardNumber"]?.Errors;
    var cardInvalid = cardErrors != null && cardErrors.Count > 0;

    var expiryErrors = ViewData.ModelState["Expiry"]?.Errors;
    var expiryInvalid = expiryErrors != null && expiryErrors.Count > 0;

    var cvvErrors = ViewData.ModelState["Cvv"]?.Errors;
    var cvvInvalid = cvvErrors != null && cvvErrors.Count > 0;
}

@if (showPaymentModal)
{
    <div class="modal-backdrop fade show"></div>
}

@await Html.PartialAsync("_FormErrorSummary")



<div class="row mb-4 mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Araç Girişi</h5>
                <form method="post" asp-action="VehicleEnter" id="vehicleEnterForm">
                    <input type="hidden" name="SpotId" id="selectedSpotId" value="0" />
                    <div class="input-group">
                        <input name="Plate" class="form-control" placeholder="Plaka girin" />
                        <button class="btn btn-success" type="submit">Giriş</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Araç Çıkışı</h5>
                <form method="post" asp-action="VehicleExit">
                    <div class="input-group">
                        <input name="Plate" class="form-control" placeholder="Plaka girin" />
                        <button class="btn btn-danger" type="submit">Çıkış</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="mb-3">Otopark Alanları</h5>

        <div class="row">
            @foreach (var spot in Model.Data!)
            
            {
                var isEmpty = !spot.IsFilled;
                var cardClasses = isEmpty
                ? "card text-center spot-card spot-card-empty"
                : "card text-center spot-card spot-card-filled bg-danger text-white";

                <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-3">
                    <div class="@cardClasses"
                         data-spot-id="@spot.Id"
                         data-empty="@isEmpty.ToString().ToLower()">
                        <div class="card-body p-2">
                            <div class="fw-bold">@spot.Code</div>
                            <small>
                                @(spot.IsFilled? spot.Plate: "Boş")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<!-- ÖDEME MODALI (sadece VehicleExit success ise açılıyor) -->
<div class="@paymentModalClass"
     id="paymentModal"
     tabindex="-1"
     aria-labelledby="paymentModalLabel"
     aria-hidden="@paymentModalAriaHidden"
     style="@paymentModalStyle">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="paymentModalLabel">Ödeme Al</h5>
                <button type="button"
                        class="btn-close"
                        aria-label="Kapat"
                        onclick="closePaymentModal()"></button>
            </div>

            <form method="post" asp-action="ConfirmExit" novalidate>
                <div class="modal-body">
                    <p class="mb-2">
                        Plaka: <strong id="paymentPlateText">@exitPlate</strong>
                    </p>
                    <p class="mb-3">
                        Ödenecek Tutar:
                        <strong id="paymentAmountText">
                            @(exitPrice.HasValue? exitPrice.Value.ToString("N2") + " ₺" : "-")
                        </strong>
                    </p>
                    <input type="hidden" name="Plate" value="@exitPlate" />
                    <div class="mb-3">
                        <label class="form-label">Kart Üzerindeki İsim</label>
                        <input type="text"
                               name="CardHolderName"
                               class="form-control @(nameInvalid ? "is-invalid" : "")"
                               value="@formCardHolderName" />
                        @if (nameInvalid)
                        {
                            <div class="invalid-feedback">
                                @foreach (var err in nameErrors!)
                                {
                                    @err.ErrorMessage
                            
                                    <br />
                                }
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kart Numarası</label>
                        <input type="text"
                               name="CardNumber"
                               class="form-control @(cardInvalid ? "is-invalid" : "")"
                               maxlength="19"
                               placeholder="**** **** **** ****"
                               value="@formCardNumber" />
                        @if (cardInvalid)
                        {
                            <div class="invalid-feedback">
                                @foreach (var err in cardErrors!)
                                {
                                    @err.ErrorMessage
                            
                                    <br />
                                }
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">Son Kullanma</label>
                            <input type="text"
                                   name="Expiry"
                                   class="form-control @(expiryInvalid ? "is-invalid" : "")"
                                   placeholder="AA/YY"
                                   maxlength="5"
                                   value="@formExpiry" />
                            @if (expiryInvalid)
                            {
                                <div class="invalid-feedback">
                                    @foreach (var err in expiryErrors!)
                                    {
                                        @err.ErrorMessage
                                
                                        <br />
                                    }
                                </div>
                            }
                        </div>
                        <div class="col-6">
                            <label class="form-label">CVV</label>
                            <input type="text"
                                   name="Cvv"
                                   class="form-control @(cvvInvalid ? "is-invalid" : "")"
                                   maxlength="3"
                                   value="@formCvv" />
                            @if (cvvInvalid)
                            {
                                <div class="invalid-feedback">
                                    @foreach (var err in cvvErrors!)
                                    {
                                        @err.ErrorMessage
                                
                                        <br />
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        Ödemeyi Tamamla
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const spotCards = document.querySelectorAll(".spot-card");
            const hiddenInput = document.getElementById("selectedSpotId");

            spotCards.forEach(card => {
                card.addEventListener("click", function () {
                    if (this.dataset.empty !== "true") {
                        return;
                    }
                    document.querySelectorAll(".spot-card-empty.spot-card-selected")
                        .forEach(c => c.classList.remove("spot-card-selected"));
                    this.classList.add("spot-card-selected");
                    const id = this.dataset.spotId;
                    hiddenInput.value = id;
                });
            });
        });

        function closePaymentModal() {
            const modal = document.getElementById("paymentModal");
            if (modal) {
                modal.classList.remove("show");
                modal.style.display = "none";
                modal.setAttribute("aria-hidden", "true");
            }
            document.querySelectorAll('.modal-backdrop').forEach(b => b.remove());
            document.body.classList.remove('modal-open');
            document.body.style.removeProperty('padding-right');
        }
    </script>
}

