<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - ParkingLot</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/park.css" asp-append-version="true" />


</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-soft">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Parking")">
                <span class="me-2">Hoş geldiniz</span>
                <strong>@User.FindFirst("FullName")?.Value </strong>
            </a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto ms-2 mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Parking" ? "active" : "")"
                           asp-controller="Parking"
                           asp-action="Index">
                            Park Slotları
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Ticket" ? "active" : "")"
                           asp-controller="Ticket"
                           asp-action="Index">
                            Biletler
                        </a>
                    </li>

                </ul>
                <div class="d-flex">
                    <a class="btn btn-logout btn-sm"href="@Url.Action("Logout", "Auth")">Çıkış</a>
                 </div>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
