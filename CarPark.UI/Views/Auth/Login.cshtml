@{
    ViewData["Title"] = "Giriş Yap";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarPark.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarPark.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
</head>
<body>
        <div>
            <section class="hero-bg d-flex align-items-center justify-content-center">
                <div class="hero-overlay"></div>
                <div class="container position-relative">
                    <div class="row justify-content-center">
                        <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                            <div class="card shadow-lg border-0 rounded-4 bg-glass">
                                <div class="card-body p-4 p-md-5">
                                <h1 class="h3 mb-4 text-center">Hoşgeldiniz</h1>
                                    <h1 class="h4 mb-4 text-center">Giriş Yap</h1>
                                    <form asp-controller="Auth" asp-action="Register" method="post" class="needs-validation" novalidate>
                                        <div class="mt-3">
                                            <label for="UserName" class="form-label">Kullanıcı Adı</label>
                                            <input id="UserName" name="UserName" type="text" class="form-control" required autocomplete="username"
                                                   minlength="3" maxlength="32" />
                                            <div class="invalid-feedback"> kullanıcı adınızı girin.</div>
                                        </div>
                                        <div class="mt-3">
                                            <label for="Password" class="form-label">Şifre</label>
                                            <input id="Password" name="Password" type="password" class="form-control" minlength="6" required autocomplete="new-password" />
                                            <div class="invalid-feedback"> şifrenizi girin.</div>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100 mt-3">Kayıt Ol</button>
                                    </form>
                                    <p class="mt-3 mb-0 text-center opacity-75 small">
                                        Hesabın Yok mu? <a asp-controller="Auth" asp-action="Register">Kayıt Ol</a>
                                    </p>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>


